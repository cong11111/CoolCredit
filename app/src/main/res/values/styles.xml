<resources>
    <!-- Base application theme. -->
<!--    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
<!--        &lt;!&ndash;全屏,无标题&ndash;&gt;-->
<!--&lt;!&ndash;        <item name="android:windowFullscreen">true</item>&ndash;&gt;-->
<!--    </style>-->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_ff3865cb</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActivityTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@color/theme_color</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DateTimePicker.Dialog" parent="SDL.Dialog">
        <item name="android:textSize">@dimen/dp_15</item>
    </style>

    <style name="myNavMenuTextStyle">
        <item name="android:textSize">@dimen/dp_16</item>
    </style>
    <style name="s_true" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#ff3865cb</item>
    </style>

    <style name="s_false" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#9b9b9b</item>
    </style>

    <style name="MyTranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/translucent_bg</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <declare-styleable name="select_view">
        <attr name="select_view_hint" format="string" />
        <attr name="select_view_desc" format="string" />
        <attr name="select_view_icon" format="reference" />
    </declare-styleable>

    <style name="view_divide">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.8dp</item>
        <item name="android:background">@color/view_line_unselect</item>
    </style>

    <declare-styleable name="WaveSideBar">
        <attr name="sidebar_lazy_respond" format="boolean"/>
        <attr name="sidebar_text_size" format="dimension"/>
        <attr name="sidebar_text_color" format="color"/>
        <attr name="sidebar_max_offset" format="dimension"/>
        <attr name="sidebar_position" format="enum">
            <enum name="right" value="0"/>
            <enum name="left" value="1"/>
        </attr>
        <attr name="sidebar_text_alignment" format="enum">
            <enum name="center" value="0"/>
            <enum name="left" value="1"/>
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>

    <style name="request_permission_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="request_permission_iv">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="request_permission_sc_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="request_permission_tv_bottom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="request_permission_tv_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="request_permission_tv_top">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
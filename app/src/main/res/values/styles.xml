    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_ff3865cb</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActivityTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_home</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DateTimePicker.Dialog" parent="SDL.Dialog">
        <item name="android:textSize">@dimen/dp_15</item>
    </style>

    <style name="myNavMenuTextStyle">
        <item name="android:textSize">@dimen/dp_16</item>
    </style>
    <style name="s_true" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#ff3865cb</item>
    </style>

    <style name="s_false" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#9b9b9b</item>
    </style>

    <style name="MyTranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/translucent_bg</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>
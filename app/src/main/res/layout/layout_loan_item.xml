                    android:textSize="@dimen/sp_18" />

                <TextView
                    android:id="@+id/tv_second_Repayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="₦ 0"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_16" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Repay Date"
                    android:textColor="@color/color_656565"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    android:id="@+id/tv_second_Repay_Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="₦ 0"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_16" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_second_Overdue_Fee"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Overdue Fee"
                    android:textColor="@color/color_656565"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    android:id="@+id/tv_second_Overdue_Fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="₦ 0"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_16" />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_second_repaymemt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42_67"
                android:background="@drawable/btn_login_selector"
                android:enabled="true"
                android:text="@string/str_make_a_repaymemt"
                android:textColor="@color/color_FFFFFF"

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/ll_title"
            layout="@layout/layout_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_23"
                android:text="Card number"
                android:textColor="@color/color_ff999999"
                android:textSize="@dimen/sp_16" />

            <com.tiny.cash.loan.card.ui.view.ClearEditText
                android:id="@+id/et_bank_number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_6_67"
                android:background="@drawable/edittext_selector"
                android:inputType="number"
                android:maxLength="22"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textCursorDrawable="@drawable/ic_edt_cursor"
                android:textSize="@dimen/sp_14" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="Expiry date MM/YY"
                android:textColor="@color/color_ff999999"
                android:textSize="@dimen/sp_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_33"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal">

                <com.tiny.cash.loan.card.ui.view.ClearEditText
                    android:id="@+id/et_bank_date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dp_18"
                    android:layout_weight="2"
                    android:background="@drawable/edittext_selector"
                    android:hint="MM/YY"
                    android:inputType="textVisiblePassword"
                    android:textColor="@color/color_333333"
                    android:textCursorDrawable="@drawable/ic_edt_cursor"
                    android:textSize="@dimen/sp_14" />

                <com.tiny.cash.loan.card.ui.view.ClearEditText
                    android:id="@+id/et_bank_cvv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_selector"
                    android:hint="CVV"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textColor="@color/color_333333"
                    android:textCursorDrawable="@drawable/ic_edt_cursor"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_ffebebeb" />

            <com.text.alginlib.XQJustifyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25"
                android:text="Our app will withdraw ₦50 card binding fee from your bank account.Please make sure you have at least ₦ 50 in your bank account."
                android:textColor="@color/color_FF0000"
                android:textSize="@dimen/sp_16" />


            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/dp_30"
                android:background="@drawable/btn_login_selector"
                android:enabled="true"
                android:text="@string/str_submit"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/sp_15" />
            <com.text.alginlib.XQJustifyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25"
                android:text="Note:"
                android:textColor="@color/color_FF0000"
                android:textSize="@dimen/sp_16" />

            <com.text.alginlib.XQJustifyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="If you fail to receive OTP when binding your card, please try to skip that step via Return option on your phone, then continue the loan application process."
                android:textColor="@color/color_FF0000"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>
    </LinearLayout>

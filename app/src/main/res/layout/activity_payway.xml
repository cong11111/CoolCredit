    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_560"
                android:background="@drawable/bg_gray_radius_top_right_8"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_80"
                    android:background="@drawable/bg_white_radius_top_right_8"
                    android:paddingLeft="@dimen/dp_17"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_10"
                    android:text="Please kindly choose one of below payment channels to proceed payment."
                    android:textColor="#FF1A1A1A"
                    android:textSize="@dimen/sp_16" />

                <LinearLayout
                    android:id="@+id/ll_QuickRepayment"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_135"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_marginRight="@dimen/dp_6"
                    android:background="@color/color_FFFFFF"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_17"
                    android:paddingTop="@dimen/dp_16">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quick repayment"
                        android:textColor="#ff333333"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-use binded bank card to do repayment"
                        android:textColor="#ff333333"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_18"
                            android:layout_marginTop="@dimen/dp_2"
                            android:background="@mipmap/yinhangka" />

                        <TextView
                            android:id="@+id/tv_bankNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:text="@string/please_bind_your_bank_card"
                            android:textColor="#ff333333"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_20"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:src="@mipmap/btn_more" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_ok"
                        android:layout_width="@dimen/dp_65"
                        android:layout_height="@dimen/dp_25"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_7"
                        android:background="@drawable/bg_gray_solid_radius"
                        android:gravity="center"
                        android:text="@string/ok"
                        android:textColor="@color/color_FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_marginRight="@dimen/dp_6"
                    android:background="@color/color_FFFFFF"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_17"
                    android:paddingTop="@dimen/dp_16">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Other channel"
                        android:textColor="#ff333333"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:id="@+id/btn_Paystack"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40">

                        <TextView
                            android:id="@+id/tv_paystack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:text="@string/paystack"
                            android:textColor="@color/color_D9000000"
                            android:textSize="@dimen/sp_18" />

                        <TextView
                            android:layout_width="@dimen/dp_45"
                            android:layout_height="@dimen/dp_20"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_toRightOf="@+id/tv_paystack"
                            android:background="@drawable/bg_red_radius"
                            android:gravity="center"
                            android:text="HOT"
                            android:textColor="@color/color_FFFFFF"
                            android:textSize="@dimen/sp_14" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginLeft="@dimen/dp_23"
                        android:layout_marginRight="@dimen/dp_23"
                        android:background="@color/color_EBEBEB" />

                    <TextView
                        android:id="@+id/btn_Flutterwave"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:background="@null"
                        android:gravity="center"
                        android:text="Flutterwave"
                        android:textAllCaps="false"
                        android:textColor="@color/color_D9000000"
                        android:textSize="@dimen/sp_18" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginLeft="@dimen/dp_23"
                        android:layout_marginRight="@dimen/dp_23"
                        android:background="@color/color_EBEBEB" />

                    <TextView
                        android:id="@+id/btn_redocly_h5"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:background="@null"
                        android:gravity="center"
                        android:text="Redocly"
                        android:visibility="gone"
                        android:textAllCaps="false"
                        android:textColor="@color/color_D9000000"
                        android:textSize="@dimen/sp_18" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_Monify"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_150"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_marginRight="@dimen/dp_6"
                    android:background="@color/color_FFFFFF"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_17"
                    android:paddingTop="@dimen/dp_16">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transter accounts"
                        android:textColor="#ff333333"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_35">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Account Name:"
                            android:textColor="#ff999999"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:id="@+id/tv_Account_Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_125"
                            android:text=""
                            android:textColor="#ff333333"
                            android:textSize="@dimen/sp_16" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_33"
                        android:background="@color/color_ffd1d1d1" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_35">

                        <TextView
                            android:id="@+id/tv_Account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Account Number: "
                            android:textColor="#ff999999"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:id="@+id/tv_copy"
                            android:layout_width="@dimen/dp_54"
                            android:layout_height="@dimen/dp_25"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_16"
                            android:background="@drawable/bg_bule_radius_10"
                            android:gravity="center_horizontal"
                            android:text="copy"
                            android:textColor="@color/color_FFFFFF"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/tv_Account_Number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_125"
                            android:text=""
                            android:textColor="#ff333333"
                            android:textSize="@dimen/sp_16" />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_33"
                        android:background="@color/color_ffd1d1d1" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_35">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Bank:"
                            android:textColor="#ff999999"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:id="@+id/tv_Account_Bank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_125"
                            android:text=""
                            android:textColor="#ff333333"
                            android:textSize="@dimen/sp_16" />
                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@color/color_EBEBEB" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_165"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_marginRight="@dimen/dp_6"
                    android:background="@color/color_FFFFFF"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_17"
                    android:paddingTop="@dimen/dp_16"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transter accounts"
                        android:textColor="#ff333333"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Account Name:"
                            android:textColor="#ff999999"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:id="@+id/tv_Account_Name1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_125"
                            android:text=""
                            android:textColor="#ff333333"
                            android:textSize="@dimen/sp_16" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_33"
                        android:background="@color/color_ffd1d1d1" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_35">

                        <TextView
                            android:id="@+id/tv_Account1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Account Number: "
                            android:textColor="#ff999999"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:id="@+id/tv_copy1"
                            android:layout_width="@dimen/dp_54"
                            android:layout_height="@dimen/dp_25"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_16"
                            android:background="@drawable/bg_bule_radius_10"
                            android:gravity="center_horizontal"
                            android:text="copy"
                            android:textColor="@color/color_FFFFFF"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/tv_Account_Number1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_125"
                            android:text=""
                            android:textColor="#ff333333"
                            android:textSize="@dimen/sp_16" />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_33"
                        android:background="@color/color_ffd1d1d1" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_35">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Bank:"
                            android:textColor="#ff999999"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:id="@+id/tv_Account_Bank1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_125"
                            android:text=""
                            android:textColor="#ff333333"
                            android:textSize="@dimen/sp_16" />
                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@color/color_EBEBEB" />


                <TextView
                    android:id="@+id/btn_Cancel"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@color/color_FFFFFF"
                    android:gravity="center"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/color_2F6EFE"
                    android:textSize="@dimen/sp_18" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@color/color_EBEBEB" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>

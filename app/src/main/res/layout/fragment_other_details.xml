<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_switch"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:layout_marginTop="@dimen/dp_8"
                android:visibility="gone"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Editor"
                    android:textColor="@color/color_ff999999"
                    android:textSize="@dimen/sp_16" />

                <Switch
                    android:id="@+id/s_v"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:showText="true"
                    android:switchMinWidth="20dp"
                    android:textOff="off"
                    android:textOn="on"
                    android:thumb="@drawable/thumb"
                    android:track="@drawable/track" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ll_show_work_msg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="@string/str_number_of_spouses"
                    android:textColor="@color/color_ff999999"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_number_of_spouses"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_34"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_18" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_ffebebeb" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/str_any_foreign_debt"
                    android:textColor="@color/color_ff999999"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_foreign_debt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_34"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_18" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_ffebebeb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/str_gross_salary_monthly"
                    android:textColor="@color/color_ff999999"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_gross_salary"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_34"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_18" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_ffebebeb" />

                <LinearLayout
                    android:id="@+id/ll_education"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:text="Education Background"
                        android:textColor="@color/color_ff999999"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/tv_education"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_34"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_18" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/color_ffebebeb" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/str_employer_name"
                    android:textColor="@color/color_ff999999"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_company_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_34"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_18" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_ffebebeb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/str_employer_address"
                    android:textColor="@color/color_ff999999"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_company_address"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_34"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_18" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_ffebebeb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/str_working_status"
                    android:textColor="@color/color_ff999999"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_working_status"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_34"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_18" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_ffebebeb" />

            </LinearLayout>
            <LinearLayout android:id="@+id/ll_add_workmsg"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="@string/str_number_of_spouses"
                    android:textColor="@color/color_ff999999"
                    android:textSize="@dimen/sp_16" />

                <org.angmarch.views.NiceSpinner
                    android:id="@+id/spinner_number_of_spouses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10025"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="start"
                    android:hint="@string/str_choose_from_list"
                    android:textColor="@color/color_ffcccccc"
                    android:textSize="@dimen/sp_18"
                    app:backgroundSelector="@drawable/background_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/str_any_foreign_debt"
                    android:textColor="@color/color_ff999999"
                    android:textSize="@dimen/sp_16" />

                <org.angmarch.views.NiceSpinner
                    android:id="@+id/spinner_foreign_debt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10025"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="start"
                    android:hint="@string/str_choose_from_list"
                    android:textColor="@color/color_ffcccccc"
                    android:textSize="@dimen/sp_18"
                    app:backgroundSelector="@drawable/background_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/str_gross_salary_monthly"
                    android:textColor="@color/color_ff999999"
                    android:textSize="@dimen/sp_16" />

                <org.angmarch.views.NiceSpinner
                    android:id="@+id/spinner_gross_salary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10025"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="start"
                    android:hint="@string/str_choose_from_list"
                    android:textColor="@color/color_ffcccccc"
                    android:textSize="@dimen/sp_18"
                    app:backgroundSelector="@drawable/background_selector" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="Education Background"
                    android:textColor="@color/color_ff999999"
                    android:textSize="@dimen/sp_16" />

                <org.angmarch.views.NiceSpinner
                    android:id="@+id/spinner_education"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10025"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="start"
                    android:hint="@string/str_choose_from_list"
                    android:textColor="@color/color_ffcccccc"
                    android:textSize="@dimen/sp_18"
                    app:backgroundSelector="@drawable/background_selector" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/str_employer_name"
                    android:textColor="@color/color_ff999999"
                    android:textSize="@dimen/sp_16" />

                <com.tiny.cash.loan.card.ui.view.ClearEditText
                    android:id="@+id/et_company_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_34"
                    android:background="@drawable/edittext_selector"
                    android:inputType="text"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/str_employer_address"
                    android:textColor="@color/color_ff999999"
                    android:textSize="@dimen/sp_16" />

                <com.tiny.cash.loan.card.ui.view.ClearEditText
                    android:id="@+id/et_company_address"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_34"
                    android:background="@drawable/edittext_selector"
                    android:inputType="text"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/str_working_status"
                    android:textColor="@color/color_ff999999"
                    android:textSize="@dimen/sp_16" />

                <org.angmarch.views.NiceSpinner
                    android:id="@+id/spinner_working_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10025"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="start"
                    android:hint="@string/str_choose_from_list"
                    android:textColor="@color/color_ffcccccc"
                    android:textSize="@dimen/sp_18"
                    app:backgroundSelector="@drawable/background_selector" />

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_42"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:background="@drawable/btn_login_selector"
                    android:enabled="true"
                    android:text="@string/str_submit"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
</layout>
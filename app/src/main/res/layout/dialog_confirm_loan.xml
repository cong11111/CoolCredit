<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/bg_white_radius_8"
            android:layout_height="@dimen/dp_350"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_19"
                        android:text="@string/str_confirm_application"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_20" />

                    <LinearLayout
                        android:id="@+id/ll_center_container"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp_75"
                            android:text="@string/str_application_detail"
                            android:textColor="@color/color_656565"
                            android:textSize="@dimen/sp_16" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_marginBottom="@dimen/dp_15"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="@string/str_repay_term"
                                android:textSize="@dimen/sp_16"
                                android:textColor="@color/color_656565"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/tv_confirm_loan_date"
                                android:layout_width="wrap_content"
                                android:text="7"
                                android:textColor="@color/color_ff09c9b3"
                                android:layout_marginStart="@dimen/dp_25"
                                android:textSize="@dimen/sp_16"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_detail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_90"
                        android:layout_below="@id/ll_center_container"
                        android:background="@drawable/bg_green_radius_8"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_20"
                                android:text="@string/str_due_date"
                                android:textColor="@color/color_656565"
                                android:textSize="@dimen/sp_16" />

                            <TextView
                                android:id="@+id/tv_due_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text="15   May  2020"
                                android:textColor="@color/color_ff09c9b3"
                                android:textSize="@dimen/sp_18" />
                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/dp_2"
                            android:layout_height="@dimen/dp_50"
                            android:layout_centerInParent="true"
                            android:background="@color/color_63a219" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_20"
                                android:text="@string/str_total_amount"
                                android:textColor="@color/color_656565"
                                android:textSize="@dimen/sp_16" />

                            <TextView
                                android:id="@+id/tv_total_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text="â‚¦  1,170"
                                android:textColor="@color/color_ff09c9b3"
                                android:textSize="@dimen/sp_18" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_lout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_detail"
                        android:layout_marginTop="@dimen/dp_20"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="* "
                            android:textColor="@color/color_FF0000"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_subject_change"
                            android:textColor="@color/color_ff999999"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_lout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_lout"
                        android:layout_marginTop="@dimen/dp_16"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/cb_agree"
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="@dimen/dp_2"
                            android:src="@drawable/selector_checkbox" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_13"
                            android:text="@string/str_read_agree"
                            android:textColor="@color/color_000000"
                            android:textSize="@dimen/sp_14" />

                        <!--                    <TextView-->
                        <!--                        android:id="@+id/tv_services"-->
                        <!--                        android:layout_width="wrap_content"-->
                        <!--                        android:layout_height="wrap_content"-->
                        <!--                        android:paddingLeft="@dimen/dp_5"-->
                        <!--                        android:text="@string/str_services"-->
                        <!--                        android:textColor="@color/color_09CAB3"-->
                        <!--                        android:textSize="@dimen/sp_14" />-->

                        <!--                    <TextView-->
                        <!--                        android:layout_width="wrap_content"-->
                        <!--                        android:layout_height="wrap_content"-->
                        <!--                        android:paddingLeft="@dimen/dp_5"-->
                        <!--                        android:text="@string/str_and"-->
                        <!--                        android:textColor="@color/color_09CAB3"-->
                        <!--                        android:textSize="@dimen/sp_14" />-->

                        <TextView
                            android:id="@+id/tv_privacy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dp_5"
                            android:text="@string/str_privacy"
                            android:textColor="@color/color_09CAB3"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.core.widget.NestedScrollView>
            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:background="@drawable/bg_common_dialog_bottom"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/str_cancel"
                    android:textColor="@color/color_ff999999"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/btn_submit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/str_submit"
                    android:textColor="@color/color_ff3865cb"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</layout>

<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_246"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/bg_white_radius_8"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_shutdown"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_18"
                    android:padding="@dimen/dp_2"
                    android:src="@mipmap/btn_clear" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="@string/offline_payment_transfer"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_20" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Account Name:" />

                <TextView
                    android:id="@+id/tv_Account_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_125"
                    android:text="" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_33"
                android:background="@color/color_ffd1d1d1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35">
                <TextView
                    android:id="@+id/tv_Account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account Number: "
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/tv_copy"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_25"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="@drawable/bg_bule_radius_10"
                    android:text="copy"
                    android:gravity="center_horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="@dimen/sp_14" />
                <TextView
                    android:id="@+id/tv_Account_Number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_125"
                    android:text="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Account Number: " />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_33"
                android:background="@color/color_ffd1d1d1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Bank:" />

                <TextView
                    android:id="@+id/tv_Account_Bank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_125"
                    android:text="" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_33"
                android:background="@color/color_ffd1d1d1" />

            <com.text.alginlib.XQJustifyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text=" Fill in BVN and mobile phone number when transferring. Otherwise, it will cause the loan status update to fail, resulting in penalty interest."
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</layout>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_email_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_personal_email"
            android:textColor="@color/color_ff999999"
            android:textSize="@dimen/sp_16" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.tiny.cash.loan.card.ui.view.EmailAutoCompleteTextView
                android:id="@+id/et_personal_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:hint="input email :"
                android:completionThreshold="1"
                android:background="@drawable/edittext_selector"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_18" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_clear"
                android:layout_width="wrap_content"
                android:src="@mipmap/btn_clear"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="15dp"
                android:layout_height="wrap_content"/>

        </FrameLayout>


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_commit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@drawable/selector_commit_bg"
        android:enabled="true"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:text="@string/str_submit"
        android:textColor="#FFFFFF"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_25"
        android:textSize="@dimen/sp_17" />


</FrameLayout>
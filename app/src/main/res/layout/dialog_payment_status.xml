<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_350"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@drawable/bg_white_radius_8"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_statusImg"
                android:layout_width="@dimen/dp_165"
                android:layout_height="@dimen/dp_165"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@mipmap/icon_paystack_status" />

            <TextView
                android:id="@+id/tv_statusTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="Payment Success"
                android:textColor="#D9000000"
                android:textSize="22dp" />


            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_40"
                android:text=""
                android:textColor="#FF1A1A1A"
                android:textSize="@dimen/sp_16" />

            <Button
                android:id="@+id/btn_goHome"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@drawable/btn_login_selector"
                android:enabled="true"
                android:text="Back to Home"
                android:textAllCaps="false"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/sp_18" />

        </LinearLayout>


    </LinearLayout>
</layout>

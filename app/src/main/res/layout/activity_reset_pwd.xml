<?xml version="1.0" encoding="utf-8"?>
<!--
<layout xmlns:android="http://schemas.android.com/apk/res/android">
-->

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_back_reg"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_29"
            android:padding="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginTop="@dimen/dp_6"
            android:src="@mipmap/btn_back_black" />

        <LinearLayout
            android:id="@+id/ll_pwd_id"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_44"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_str_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_pwd"
                android:textColor="@color/color_ff3865cb"
                android:textSize="@dimen/sp_16" />

            <RelativeLayout
                android:id="@+id/rl_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_below="@id/tv_str_phone"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_login_frame_tips_selector"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_6_67"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/str_pwd_input_hint"
                    android:maxLength="4"
                    android:inputType="number"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="@color/color_333333"
                    android:textCursorDrawable="@drawable/ic_edt_cursor"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:id="@+id/iv_pwd_clear"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_toLeftOf="@id/iv_pwd_style"
                    android:clickable="true"
                    android:visibility="gone"
                    android:padding="@dimen/dp_2"
                    android:src="@drawable/ic_edittext_clear" />

                <ImageView
                    android:id="@+id/iv_pwd_style"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                   android:padding="@dimen/dp_2"
                    android:src="@mipmap/btn_password_hide"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_pwd_confirm_id"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_pwd_id"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20_67"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_password_confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_below="@id/tv_str_phone"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_9"
                android:background="@drawable/btn_login_frame_tips_selector"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_pwd_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_6_67"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/str_pwd_confirm_input_hint"
                    android:maxLength="4"
                    android:password="true"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/color_333333"
                    android:textCursorDrawable="@drawable/ic_edt_cursor"
                    android:textSize="@dimen/sp_18" />
                <ImageView
                    android:id="@+id/iv_pwd__confirm_clear"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_toLeftOf="@id/iv_pwd_confirm_style"
                    android:clickable="true"
                    android:padding="@dimen/dp_2"
                    android:visibility="gone"
                    android:src="@drawable/ic_edittext_clear" />

                <ImageView
                    android:id="@+id/iv_pwd_confirm_style"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:padding="@dimen/dp_2"
                    android:src="@mipmap/btn_password_hide" />
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_sign_up"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42_67"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_16_67"
            android:layout_marginRight="@dimen/dp_16_67"
            android:layout_marginBottom="@dimen/dp_72"
            android:background="@drawable/btn_login_selector"
            android:enabled="false"
            android:text="@string/str_change_password"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/sp_15" />

    </RelativeLayout>

<!--
</layout>-->

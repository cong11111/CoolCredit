<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:background="@drawable/bg_blue_radius"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <ImageView
            android:id="@+id/iv_bankLogo"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_cardchip" />


        <TextView
            android:id="@+id/iv_bank_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_toRightOf="@+id/iv_bankLogo"
            android:text="Bank card No"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_bankNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_bank_icon"
            android:layout_alignLeft="@+id/iv_bank_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@+id/iv_bank_icon"
            android:text="****  ****  ****  2834"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/cb_agree"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:focusable="true"
            android:src="@mipmap/icon_bank_check" />

    </RelativeLayout>
</layout>
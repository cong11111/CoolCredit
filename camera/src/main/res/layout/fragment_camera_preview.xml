<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/color_595959"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/camera_preview_result"
        android:layout_width="match_parent"
        android:scaleType="fitCenter"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_black_radius_56"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="28dp"
        android:paddingBottom="28dp"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_camera_preview_comfire"
            android:layout_width="60dp"
            android:src="@drawable/ic_photo_comfire"
            android:layout_height="60dp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_camera_preview_cancel"
            android:layout_width="60dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_photo_cancel"
            android:layout_height="60dp"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>